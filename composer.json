{
    "name": "cct-marketing/campaign-wizard-sdk",
    "description": "Sdk to communicate with the campaign wizard microservice",
    "type": "library",
    "require": {
        "php": "~7.1",
        "beberlei/assert": "^2.6|^3.0",
        "ramsey/uuid": "^3.8|^4.0",
        "ext-json": "*",
        "psr/http-client": "^1.0",
        "cct-marketing/value-objects": "~0.1@dev"
    },
    "require-dev": {
        "phpunit/phpunit": "^7.0",
        "friendsofphp/php-cs-fixer": "^2.16",
        "vimeo/psalm": "^3.11",
        "nyholm/psr7": "^1.4",
        "guzzlehttp/guzzle": "^7.4"
    },
    "autoload": {
        "psr-4": {
            "CCT\\SDK\\CampaignWizard\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "CCT\\SDK\\CampaignWizard\\Tests\\": "tests/"
        }
    },
    "license": "MIT",
    "authors": [
        {
            "name": "Paul Schweppe",
            "email": "ps@cct-marketing.com"
        }
    ],
    "config": {
        "bin-dir": "bin"
    },
    "repositories": [
        {
            "type": "git",
            "url": "git@bitbucket.org:cct-marketing/value-objects"
        }
    ]
}
